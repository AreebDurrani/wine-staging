+++ b/dlls/bcrypt/gcrypt.c
@@ -0,0 +1,264 @@
+#include "config.h"
+#include "wine/port.h"
+
+#include <stdarg.h>
+#ifdef HAVE_GNUTLS_CIPHER_INIT
+#include <gnutls/gnutls.h>
